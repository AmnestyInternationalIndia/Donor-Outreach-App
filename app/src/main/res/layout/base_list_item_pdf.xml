<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="240dp"
	android:layout_marginBottom="4dp"
	android:layout_marginRight="4dp"
	android:orientation="vertical"
	>

	<ImageView
		android:id="@+id/thumbnailImageView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:src="@drawable/ic_pdf_icon"
		android:contentDescription="@string/content_description_thumbnail"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:background="@drawable/background_protection"
		android:orientation="vertical"
		android:paddingLeft="4dp"
		android:paddingRight="4dp"
		>


		<TextView
			android:id="@+id/fileNameView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:gravity="left"
			android:lines="1"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:singleLine="true"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@android:color/background_light"
			android:textSize="16sp"
			android:visibility="visible"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:id="@+id/shareFile"
				style="?android:attr/borderlessButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="48dp"
				android:text="Share"
				android:textAllCaps="true"
				android:textColor="@android:color/background_light"
				android:textSize="14sp"
				/>

			<Button
				android:id="@+id/readFile"
				style="?android:attr/borderlessButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="48dp"
				android:text="@string/label_read"
				android:textAllCaps="true"
				android:textColor="@android:color/background_light"
				android:textSize="14sp"/>

		</LinearLayout>

	</LinearLayout>
</RelativeLayout>